<div class="row">
  <form id="monForm" class="col"  action="<%= static_pages_help_path %>.pdf" method="POST">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <div class="row">
      <h1 class="col-12">TRAVAUX DE PEINTURE - DEVIS EN LIGNE</h1>
    </div>
    <fieldset class="row no-gutters">
      <legend class="col-12">Vos Coordonnées</legend>
      <div class="col-12">
        <div class="form-group">
          <label for="company">Civilité :</label>
          <select id="form_gender" name="form_gender">
            <option value="Mme">Mme</option>
            <option value="Mlle">Mademoiselle</option>
            <option value="M">Monsieur</option>
          </select>
        </div>
      </div>
      <div class="col-12">
        <div class="row no-gutters">
          <div class="form-group col-sm-12 col-md-6">
            <label for="firstname">Prénom : </label>
            <input type="text" class="form-control" placeholder="" id="firstname" name="firstname" required>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="lastname">Nom : </label>
            <input type="text" class="form-control" placeholder="" id="lastname" name="lastname" required>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="form-group col-sm-12 col-md-6">
            <label for="adresse">Adresse :</label>
            <input type="text" class="form-control" placeholder="" id="adresse"  name="adresse" required>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="zipcode">Code postal :</label>
            <input type="text" class="form-control" placeholder="" id="zipcode" name="zipcode" required>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="form-group col-sm-12 col-md-6">
            <label for="city">Ville :</label>
            <input type="text" class="form-control" placeholder="" id="city" name="city" required>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="email">Email :</label>
            <input type="email" class="form-control" id="email" placeholder="email" required>
          </div>
        </div>
      </div>
    </fieldset>
    <fieldset class="row no-gutters">
      <legend class="col-12">Adresse du chantier</legend>
      <div class="col">
        <div class="row no-gutters">
          <div class="form-group col-sm-12 col-md-6">
            <label for="adresse2">Adresse :</label>
            <input type="text" class="form-control" placeholder="" id="adresse2" name="adresse2" required>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="zip">Code postal :</label>
            <input type="text" class="form-control" placeholder="" id="zip" name="zipcode2" required>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="form-group col-sm-12 col-md-6">
            <label for="ctiy2">Ville :</label>
            <input type="text" class="form-control" placeholder="" id="city2" name="city2" required>
          </div>
          <div class="form-group col-sm-12 col-md-6">
            <label for="phone">Téléphone :</label>
            <input type="tel" class="form-control" id="phone" placeholder="phone" name="phone" required>
          </div>
        </div>
      </div>
    </fieldset>
    <div class="row">
      <legend class="col-12">Prestations</legend>
      <legend class="col-12">Plafonds</legend>
      <fieldset class="col-12">
        <div class="row">
          <div class="col-md-4">
            <div class="form-group" id="fs_ceiling">
              <label for="form_ceiling" data-hasqtip="6" oldtitle="Support en placo BA13 neuf pour des plafonds de 2.50m
               Peinture de marque Plafond Dec." title="">Peinture Plafonds: </label>
              <input id="form_ceiling" type="number" name="ceiling_m" class="calcceiling validate[custom[integer],min[0]] text-input" value="0" min="0" step="any" data-hasqtip="7" oldtitle="Surface habitable" title="" aria-describedby="qtip-7">
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group">
              <label for="form_ceiling_price">prix au m²: </label><br>
              <input id="form_ceiling_price" type="text" name="ceiling_price" tabindex="-1" readonly="" value="14.5">€
            </div>
          </div>
          <div class="col-md-4">
            <div class="form-group" id="eurofield">
              <label for="form_ceiling_total">Total Plafonds HT: </label>
               <input id="form_ceiling_total" type="text"  name="ceiling_total" tabindex="-1" readonly="" value="0">€
               <input type="hidden" name="forfait1e" id="forfait1e" value="0">
            </div>
          </div>
        </div>
      </fieldset>
      <legend class="col-12">Murs</legend>
      <fieldset id="fs_wall" class="col-12">
        <p class="double">
               <label for="check_walls" data-hasqtip="8" oldtitle="Support en placo BA13 neuf pour des plafonds de 2.50m" title="">Peinture Murs : </label>
               <input type="radio" id="noWall" name="check_walls" value="0" checked="true"> Pas de murs
               <input type="radio" id="allWall" name="check_walls" value="1"> Ensemble des murs
               <!-- <input type="radio" id="details" name="check_walls" value="2"> Détails -->
        </p>
        <p id="walls_forfait" style="display: none;">
         <!-- <label for="form_walls" title="en mode forfait la surface de references est egale a celle des plafonds">Peinture Tous les murs : </label>-->
         <select id="fw" class="form_peinture" name="form_peinture">
            <option class="impress" value="9.5">Murs Impression</option>
            <option class="satineBlanc" value="12">Murs Blanc Mat</option>
            <option class="satinePastel" value="14">Murs Blanc Velour</option>
            <option class="satine" value="16">Murs Pastel</option>
         </select>
         <input type="text" id="form_walls" name="walls_m" class="calcwalls" tabindex="-1" value="0">m²
         <input type="hidden" id="form_walls_coef" name="walls_coef" tabindex="-1" readonly="" value="2.62" data-hasqtip="9" oldtitle="Le coefficient 2.62 est un standard pour évaluer la surface des murs par rapport au sol" title="">* coef Murs *
         <input type="text" id="form_walls_price" class="coefMurs" name="walls_price" tabindex="-1" readonly="" value="9.5">€ =
         <input type="text" id="form_walls_tot" name="walls_tot" tabindex="-1" readonly="" value="0">Total
        </p>
        <p id="walls_detail" style="display: none;" class="input_fields_wrap">
          <!-- <button type="button" class="add_field_button">Ajouter une pièce</button>
          <div align="center" id="todel" class="todel" style="display: none;">
            <input type="hidden" id="monid" value="2">
            <select class="piece">
              <option value="1">Séjour</option>
              <option value="2">Cuisine</option>
              <option value="3">Chambre1</option>
